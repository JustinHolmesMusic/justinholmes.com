<div class="container text-center">
    <div class="row">
        <div class="col-2"></div>
        <div class="row justify-content-center col-8">
            <div class="col-lg-6">
                {% if use_white_logo %}
                    <a href="/" id="home-link-at-top">
                        <img class="img-fluid" id="main-logo-at-top"
                             src="{{ imageMapping["name-with-logo-white.png"] }}">
                    </a>
                {% else %}
                    <a href="/" id="home-link-at-top">
                        <img class="img-fluid" id="main-logo-at-top" src="{{ imageMapping["name-with-log.png"] }}">
                    </a>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="row mt-2">
        <a class="text-center" href="/">
            <p class="p-0 text-nowrap bright mb-0 display-6 curly" id="immutable-string-band">and the immutable
                string
                band</p>
        </a>
    </div>

    {% if no_slogan %}
        <!-- no slogan -->
    {% else %}
        <div class="row">
            <div class="text-center">
                <h4 class="bright pixel-font" id="slogan">{{ slogans[1] }}</h4>
            </div>
        </div>
    {% endif %}
</div>

<div class="container semi-transparent-bg">
    {% if no_nav %}
        <!-- no nav -->
    {% else %}
        {% include 'partials/nav.njk' %}
    {% endif %}
</div>